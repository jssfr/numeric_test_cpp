{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 3
    },
    "configurePresets": [
        {
            "name": "cmake-pedantic",
            "hidden": true,
            "warnings": {
                "dev": true,
                "deprecated": true,
                "uninitialized": true,
                "unusedCli": true,
                "systemVars": false
            },
            "errors": {
                "dev": true,
                "deprecated": true
            }
        },
        {
            "name": "dev-mode",
            "hidden": true,
            "inherits": "cmake-pedantic",
            "cacheVariables": {
                "c_numeric_DEVELOPER_MODE": "ON"
            }
        },
        {
            "name": "cppcheck",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CPPCHECK": "cppcheck;--inline-suppr"
            }
        },
        {
            "name": "clang-tidy",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--header-filter=^${sourceDir}/"
            }
        },
        {
            "name": "ci-std",
            "description": "This preset makes sure the project actually builds with at least the specified standard",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON"
            }
        },
        {
            "$comment": [
               "Preset for use modules with clang",
               "at Release mode."
            ],
            "name": "clang-release",
            "displayName": "Clang Config",
            "description": "Clang Release build using Ninja generator",
            "inherits": [
                "ci-std"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/clang/Release",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "Clang",
                "CMAKE_CXX_COMPILER": "Clang++",
                "CMAKE_CXX_FLAGS": "-O3"
            }
        },
        {
            "$comment": [
               "Preset for use modules with clang",
               "at Debug mode."
            ],
            "name": "clang-debug",
            "displayName": "Clang Config",
            "description": "Clang Debug build using Ninja generator",
            "inherits": [
                "ci-std"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/clang/Debug",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "Clang",
                "CMAKE_CXX_COMPILER": "Clang++",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic"
            }
        },
        {
          "name": "ci-sanitize",
          "binaryDir": "${sourceDir}/build/sanitize",
          "inherits": ["ci-std", "dev-mode"],
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Sanitize",
            "CMAKE_CXX_FLAGS_SANITIZE": "-U_FORTIFY_SOURCE -O2 -g -fsanitize=address,undefined -fno-omit-frame-pointer -fno-common"
          }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "configurePreset": "clang-debug",
            "configuration": "Debug"
        }
    ]
}
