{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 3
    },
    "configurePresets": [
        {
            "name": "cmake-pedantic",
            "hidden": true,
            "warnings": {
                "dev": true,
                "deprecated": true,
                "uninitialized": true,
                "unusedCli": true,
                "systemVars": false
            },
            "errors": {
                "dev": true,
                "deprecated": true
            }
        },
        {
            "name": "dev-mode",
            "hidden": true,
            "inherits": "cmake-pedantic",
            "cacheVariables": {
                "c_numeric_DEVELOPER_MODE": "ON"
            }
        },
        {
            "name": "cppcheck",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CPPCHECK": "cppcheck;--inline-suppr"
            }
        },
        {
            "name": "clang-tidy",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--header-filter=^${sourceDir}/"
            }
        },
        {
            "name": "ci-std",
            "description": "This preset makes sure the project actually builds with at least the specified standard",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON"
            }
        },
        {
            "$comment": [
               "Preset for use modules with clang",
               "at Release mode."
            ],
            "name": "clang-release",
            "displayName": "Clang Config",
            "description": "Clang Release build using Ninja generator",
            "inherits": [
                "ci-std"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/clang/Release",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "Clang",
                "CMAKE_CXX_COMPILER": "Clang++",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3"
            }
        },
        {
            "$comment": [
               "Preset for use modules with clang",
               "at Debug mode."
            ],
            "name": "clang-debug",
            "displayName": "Clang Config",
            "description": "Clang Debug build using Ninja generator",
            "inherits": [
                "ci-std"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/clang/Debug",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "Clang",
                "CMAKE_CXX_COMPILER": "Clang++",
                "CMAKE_CXX_FLAGS_DEBUG": "-Wall -Wextra -Wpedantic"
            }
        },

        {
            "$comment": [
               "Preset for use modules with gcc",
               "at Release mode."
            ],
            "name": "gcc-release",
            "displayName": "Gcc Config",
            "description": "Gcc Release build using Ninja generator",
            "inherits": [
                "ci-std"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/gcc/Release",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3"
            }
        },
        {
            "$comment": [
               "Preset for use modules with gcc",
               "at Debug mode."
            ],
            "name": "gcc-debug",
            "displayName": "Gcc Config",
            "description": "Gcc Debug build using Ninja generator",
            "inherits": [
                "ci-std"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/gcc/Debug",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_DEBUG": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "$comment": [
               "Preset for use modules with msvc",
               "at Release or Debug mode."
            ],
            "name": "msvc",
            "displayName": "msvc Config",
            "description": "msvc build using Visual Studio 17 2022 generator",
            "inherits": [
                "ci-std"
            ],
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/msvc",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        }
    ],
    "buildPresets": [
        {
          "name": "bmsvc",
          "configurePreset": "msvc",
          "hidden": false,
          "description": "Build using Visual Studio 17 2022 generator",
          "jobs": 4
        },
        {
          "name": "bclang-release",
          "configurePreset": "clang-release",
          "hidden": false,
          "description": "Build using Ninja ",
          "jobs": 4 
        },
        {
          "name": "bclang-debug",
          "configurePreset": "clang-debug",
          "hidden": false,
          "description": "Build using Ninja",
          "jobs": 4
        }
    ]
}
